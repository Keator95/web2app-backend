datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

enum TenantRole {
  OWNER
  ADMIN
  MEMBER
}

model User {
  id        String       @id @default(cuid()) @map("_id")
  email     String       @unique
  password  String
  name      String?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  tenants   TenantUser[]
}

model Tenant {
  id          String       @id @default(cuid()) @map("_id")
  name        String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  users       TenantUser[]
  configs     AppConfig[]
  pushDevices PushDevice[]
  campaigns   PushCampaign[]
  events      Event[]
  auditLogs   AuditLog[]
}

model TenantUser {
  id        String     @id @default(cuid()) @map("_id")
  role      TenantRole
  userId    String
  tenantId  String

  user      User       @relation(fields: [userId], references: [id])
  tenant    Tenant     @relation(fields: [tenantId], references: [id])

  @@unique([userId, tenantId])
  @@index([tenantId])
}

model AppConfig {
  id        String   @id @default(cuid()) @map("_id")
  tenantId  String
  version   Int      @default(1)
  json      Json
  createdAt DateTime @default(now())

  tenant    Tenant   @relation(fields: [tenantId], references: [id])
}

model PushDevice {
  id          String   @id @default(cuid()) @map("_id")
  tenantId    String
  userId      String?
  deviceToken String
  platform    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenant      Tenant   @relation(fields: [tenantId], references: [id])

  @@index([tenantId])
  @@unique([tenantId, deviceToken])
}

model PushCampaign {
  id              String   @id @default(cuid()) @map("_id")
  tenantId        String
  title           String
  body            String
  triggerType     String
  scheduleCron    String?
  createdAt       DateTime @default(now())
  createdByUserId String?

  tenant          Tenant   @relation(fields: [tenantId], references: [id])

  @@index([tenantId])
}

model Event {
  id        String   @id @default(cuid()) @map("_id")
  tenantId  String
  userId    String?
  type      String
  payload   Json
  createdAt DateTime @default(now())

  tenant    Tenant   @relation(fields: [tenantId], references: [id])

  @@index([tenantId, type])
}

model AuditLog {
  id        String   @id @default(cuid()) @map("_id")
  tenantId  String?
  userId    String?
  action    String
  details   Json?
  createdAt DateTime @default(now())

  tenant    Tenant?  @relation(fields: [tenantId], references: [id])
}
